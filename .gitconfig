[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
	log = false
[user]
	name = Brightshine
	email = brightshine.hsieh@gmail.com
[core]
	editor = nvim
	excludesfile = ~/.gitignore
	pager = less -r
[alias]
	br = branch
	co = checkout
	ci = commit
	st = status
	re = remote

	amend = commit --amend

	unstage = reset HEAD
	uncommit = reset --soft HEAD^

	cbr = rev-parse --abbrev-ref HEAD
	lo = log --oneline
	dt = difftool
	mt = mergetool
	showt = "!f() { git dt $1^ $1; }; f"
	files = "!f() { git diff --name-status $1^ $1; }; f"

	svnhead = log --grep=git-svn --pretty=format:'%h' -n 1
[merge]
	tool = vim

[push]
	default = simple

